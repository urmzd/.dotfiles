# Alacritty terminal configuration
# Managed by Chezmoi - adapts to different systems

{{- if .is_macos }}
# macOS specific settings
[window]
decorations = "buttonless"
option_as_alt = "both"
{{- else if .is_linux }}
# Linux specific settings  
[window]
decorations = "full"
{{- end }}

[window]
opacity = 0.95
{{- if .is_work }}
title = "Alacritty - Work"
{{- else }}
title = "Alacritty - Personal"
{{- end }}

[font]
{{- if .is_macos }}
normal = { family = "MesloLGS NF", style = "Regular" }
bold = { family = "MesloLGS NF", style = "Bold" }
italic = { family = "MesloLGS NF", style = "Italic" }
{{- else }}
normal = { family = "MesloLGS NF" }
{{- end }}
size = 14.0

[colors]
{{- if .is_work }}
# Work color scheme - more conservative
[colors.primary]
background = "#1e1e2e"
foreground = "#cdd6f4"

[colors.cursor]
text = "#1e1e2e"
cursor = "#f5e0dc"

[colors.normal]
black = "#45475a"
red = "#f38ba8"
green = "#a6e3a1"
yellow = "#f9e2af"
blue = "#89b4fa"
magenta = "#f5c2e7"
cyan = "#94e2d5"
white = "#bac2de"
{{- else }}
# Personal color scheme - more vibrant
[colors.primary]
background = "#24273a"
foreground = "#cad3f5"

[colors.cursor]
text = "#24273a"
cursor = "#f4dbd6"

[colors.normal]
black = "#494d64"
red = "#ed8796"
green = "#a6da95"
yellow = "#eed49f"
blue = "#8aadf4"
magenta = "#f5bde6"
cyan = "#8bd5ca"
white = "#b8c0e0"
{{- end }}

[shell]
{{- if .has_nix }}
program = "/run/current-system/sw/bin/zsh"
{{- else if .is_macos }}
program = "/bin/zsh"
{{- else }}
program = "/usr/bin/zsh"
{{- end }}

[keyboard]
bindings = [
  { key = "N", mods = "Command", action = "SpawnNewInstance" },
  { key = "Return", mods = "Command", action = "ToggleFullscreen" },
]