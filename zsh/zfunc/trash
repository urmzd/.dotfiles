trash() {
    TRASH_DIR="$HOME/.trash"

    if [[ ! -d "$TRASH_DIR" ]]; then
        mkdir -p "$TRASH_DIR"
    fi

    for item in "$@"; do
        if [[ -e "$item" ]]; then
            # Generate unique name for the item in trash directory
            timestamp=$(date +%Y%m%d%H%M%S)
            target=$(basename "$item")_$timestamp

            # Move the item to the trash directory
            mv "$item" "$TRASH_DIR/$target" 2>/dev/null
            move_successful=$?

            # If the move was not successful, try to remove the item
            if [[ $move_successful -ne 0 ]]; then
                rm -rf "$item"
                mv "$item" "$TRASH_DIR/$target"
            fi
        else
            echo "Error: $item does not exist"
        fi
    done
}
