# Tmux configuration template
# Managed by Chezmoi - adapts to different systems

# Reload config
unbind r
bind r source-file ~/.config/tmux/tmux.conf \; display-message "Config reloaded!"

# Change prefix key to Ctrl-a
unbind C-b
set-option -g prefix C-a
bind-key C-a send-prefix

# Enable mouse support
set -g mouse on

# Set vi mode
setw -g mode-keys vi

# Start windows and panes at 1, not 0
set -g base-index 1
setw -g pane-base-index 1

# Renumber windows when one is closed
set -g renumber-windows on

# Increase scrollback buffer size
set -g history-limit 10000

# Enable 256 colors and set default shell
set -g default-terminal "screen-256color"
set -g default-shell /bin/zsh

# Ensure tmux starts with a clean environment for proper shell initialization
set -g default-command "exec /bin/zsh"

{{- if .is_macos }}
# macOS specific terminal settings
set-option -ga terminal-overrides ",xterm-256color:Tc"
{{- else }}
# Linux specific terminal settings
set-option -ga terminal-overrides ",*256col*:Tc"
{{- end }}

# Vim-style pane selection
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# Vim-style pane resizing
bind H resize-pane -L 5
bind J resize-pane -D 5
bind K resize-pane -U 5
bind L resize-pane -R 5

# Better window splitting
bind | split-window -h -c "#{pane_current_path}"
bind - split-window -v -c "#{pane_current_path}"

# Create new window in current path
bind c new-window -c "#{pane_current_path}"

# Vi copy mode
bind-key -T copy-mode-vi v send-keys -X begin-selection
{{- if .is_macos }}
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "pbcopy"
bind-key -T copy-mode-vi MouseDragEnd1Pane send-keys -X copy-pipe-and-cancel "pbcopy"
{{- else }}
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "xclip -selection clipboard"
bind-key -T copy-mode-vi MouseDragEnd1Pane send-keys -X copy-pipe-and-cancel "xclip -selection clipboard"
{{- end }}

# Plugin configuration
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'christoomey/vim-tmux-navigator'
# Note: Using manual catppuccin installation (not TPM) to avoid conflicts

{{- if .is_personal }}
# Personal plugins
set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-continuum'
# Disable auto-restore to prevent multiple sessions on startup
set -g @continuum-restore 'off'
{{- end }}

# Catppuccin theme configuration - using cyberdream
set -g @catppuccin_flavour 'cyberdream'

# Load Catppuccin theme manually (recommended over TPM)
run '~/.config/tmux/plugins/catppuccin/tmux/catppuccin.tmux'

# Don't exit tmux when closing a session
set -g detach-on-destroy off

# Reduce escape time for better vim experience
set -sg escape-time 0

# Automatically set window title
set-window-option -g automatic-rename on
set-option -g set-titles on

# Activity monitoring
setw -g monitor-activity on
set -g visual-activity off

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run '~/.config/tmux/plugins/tpm/tpm'
