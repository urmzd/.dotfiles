#!/usr/bin/env bash
# Nix development environment integration
use flake

# Enable nix-direnv for faster shell loading
if ! has nix_direnv_version || ! nix_direnv_version 3.0.4; then
  source_url "https://raw.githubusercontent.com/nix-community/nix-direnv/3.0.4/direnvrc" "sha256-DzlYZ33mWF/Gs8DDeyjr8mnVmQGx7ASYqA5WlxwvBG4=" # pragma: allowlist secret
fi

# Project-specific environment variables
export PROJECT_NAME="dotfiles"
export NIX_SHELL_PRESERVE_PROMPT=1

# Prevent shell initialization conflicts
export DIRENV_IN_ENVRC=1
